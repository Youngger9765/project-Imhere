<div class="form-group">
  <%= f.label :name ,"活動名稱"%>
  <%= f.text_field :name, :class => "form-control" %>
</div>

<h3>活動上架狀態</h3> 
<div>
  <input type="radio" id="radio1" name="activity[status]" class="switch" value="0" checked="checked"  />
  <label for="radio1">隱藏</label>
</div>
<br>
<div>
  <input type="radio" id="radio2" name="activity[status]" class="switch" value="1" />
  <label for="radio2">公開上架</label>
</div>
<br> 
<div class="form-group">
  <%=f.label :logo, "策展封面"%>
  <br>
  <% if @activity.logo.exists? %>
    <%= image_tag(@activity.logo.url(:medium))%>
  <% end %>

  <%=f.file_field :logo%>
  <% if @activity.logo.exists? %>
    <%= check_box_tag "destroy_logo", "1" %> 刪除檔案
  <% end %>
</div>

<div class="form-group">
  <%= f.label :participator ,"參與者"%>
  <%= f.text_field :participator, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :start_time ,"開始時間"%>
  <%= f.datetime_select :start_time%>
</div>

<div class="form-group">
  <%= f.label :end_time ,"結束時間"%>
  <%= f.datetime_select :end_time%>
</div>

<div class="form-group">
  <%= f.label :location ,"活動地點"%>
  <%= f.text_field :location, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :content, "計畫介紹" %>
  <%= f.text_area :content, :class =>"froala-editor" %>
</div>

<div class="form-group">
  <%=f.label :information_picture, "活動資訊圖片"%>
  <br>
  <% if @activity.information_picture.exists? %>
    <%= image_tag(@activity.information_picture.url(:medium))%>
  <% end %>

  <%=f.file_field :information_picture%>
  <% if @activity.information_picture.exists? %>
    <%= check_box_tag "destroy_information_picture", "1" %> 刪除檔案
  <% end %>
</div>

<div class="form-group">
  <%= f.label :information, "活動資訊" %>
  <%= f.text_area :information, :class =>"froala-editor" %>
</div>

<%= f.submit "更新",:class => "btn btn-primary" %>

<hr>

<script>
  $(function() {
    $('.froala-editor').froalaEditor();
  });
</script>