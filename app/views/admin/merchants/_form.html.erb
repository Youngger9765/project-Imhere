<div class="col-md-8">
  <div class="form-group">
    <%= f.label :description, "商品介紹＠活動頁" %>
    <%= f.text_area :description, :class =>"froala-editor" %>
  </div>

  <hr>
  <hr>

  <h2>以下為商品獨立頁面</h2>

  <div class="form-group">
    <%= f.label :name ,"商品名稱"%>
    <%= f.text_field :name, :class => "form-control" %>
  </div>

  <div class="form-group">
      <%=f.label :logo, "LOGO"%>
      <%=f.file_field :logo%>
      
      <% if @merchant.logo.exists? %>
        <%= image_tag(@merchant.logo.url(:medium))%>
        <%= check_box_tag "destroy_logo", "1" %> 刪除檔案
      <%end%>
  </div>

  <div class="form-group">
    <%= f.label :content, "商品內容" %>
    <%= f.text_area :content, :class =>"froala-editor" %>
  </div>

  <div class="form-group">
    <%= f.label :price ,"單價"%>
    <%= f.number_field :price, :class => "form-control" %>
  </div>
  
  <%= f.submit "更新",:class => "btn btn-primary" %>
</div>

<div class="col-md-4">
  <h4>商品購買資訊</h4>
  <%= f.error_notification %>
  <div class="form-group">
    <%=f.label :logo, "LOGO"%>
    <%=f.file_field :logo%>
    
    <% if @merchant.logo.exists? %>
      <%= image_tag(@merchant.logo.url(:medium))%>
      <%= check_box_tag "destroy_logo", "1" %> 刪除檔案
    <%end%>
  </div>

  <%= f.simple_fields_for(:specs) do |spec| %>
    <%= render 'spec_fields', f: spec if @merchant.specs.any? %>
  <% end %>

  <div class="links">
    <%= link_to_add_association '新增spec', f, :specs, class:'btn btn-success' %>
  </div>
  <br>
  <%= f.submit "更新",:class => "btn btn-primary" %>
  

</div>



      



<script>
  $(function() {
    $('.froala-editor').froalaEditor();
  });
</script>