<div class="form-group">
  <%= f.label :name ,"策展名稱"%>
  <%= f.text_field :name, :class => "form-control" %>
</div>

<br> 


<div class="form-group">
  <%=f.label :banner, "策展banner(底圖)"%>
  <br>
  <% if @event.banner.exists? %>
    <%= image_tag(@event.banner.url(:medium))%>
  <%else%>
    <div style="color:red;">
      <%= "尚未有 banner 圖片"%>
    </div>  
  <% end %>
  <%=f.file_field :banner%>
  
  <% if @event.banner.exists? %>
    <%= check_box_tag "destroy_banner", "1" %> 刪除檔案
  <% end %>
</div>



<div class="form-group">
    <%=f.label :logo, "策展logo（小圖）"%>
    <br>
    <% if @event.logo.exists? %>
      <%= image_tag(@event.logo.url(:medium))%>
    <%else%>
      <div style="color:red;">
        <%= "尚未有 logo 圖片"%>
      </div>  
    <% end %>
    <%=f.file_field :logo%>
    
    <% if @event.logo.exists? %>
      <%= check_box_tag "destroy_logo", "1" %> 刪除檔案
    <% end %>
</div>

<%= f.submit "更新",:class => "btn btn-primary" %>

<hr>

<script>
  $(function() {
    $('.froala-editor').froalaEditor({
      imageUploadURL: '/attachment/upload.json',
      imageUploadMethod: 'POST'
    });
  });
</script>