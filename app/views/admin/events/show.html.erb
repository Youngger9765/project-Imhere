        <%if a.description%>
          <%if a.description.size < 100%>
            <div class="div">
              <%= strip_tags(a.description)%>
            </div>  
          <%else%>
            <div class="div">
              <%= strip_tags(a.description[0,100])%>
            </div>
          <%end%>
        <%else%>
          <h3>尚未有活動敘述！</h3>
        <%end%>
      <%end%>
    </div>
  <%end%>
</div>
