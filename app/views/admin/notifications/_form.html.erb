<div class="form-group">
  <h3><%= f.label :title ,"推播名稱"%></h3>  
  <%= f.text_field :title, :class => "form-control" %>
</div>

<div class="form-group">
  <h3><%=f.label :image, "推播大圖"%></h3> 
  <br>
  <% if @notification.image.exists? %>
    <%= image_tag(@notification.image.url(:medium))%>
  <%else%>
    <div style="color:red;">
      <%= "尚未有 推播大圖"%>
    </div>  
  <% end %>
  <%=f.file_field :image%>
  
  <% if @notification.image.exists? %>
    <%= check_box_tag "destroy_image", "1" %> 刪除檔案
  <% end %>
</div>

<div class="form-group">
  <h3><%= f.label :content ,"推播內容"%></h3> 
  <%= f.text_area :content, :class => "form-control " %>
</div>

<div class="form-group">
  <h3><%= f.label :start_time ,"推播時間"%></h3> 
  <%= f.datetime_select :start_time, :class => "form-control" %>
</div>

<div class="form-group">
  <h3><%= f.label :countdown_end_time ,"倒數結束時間"%></h3>
  <div id="count_time_form"
    <%if @check_tag == true%>
      style="display:none;"
    <%end%>
  >
    <%= f.datetime_select :countdown_end_time, :class => "form-control" %>
  </div>
  <br>
  <h4><%= check_box_tag "no_countdown", "1", @check_tag%> 不需倒數</h4> 
</div>

<div class="form-group">
  <h3><%= f.label :url ,"推播連結"%></h3> 
  <%= f.text_field :url, :class => "form-control" %>
</div>

<div class="form-group">
  <h3><%=f.label :logo, "推播logo"%></h3> 
  <br>
  <% if @notification.logo.exists? %>
    <%= image_tag(@notification.logo.url(:medium))%>
  <%else%>
    <div style="color:red;">
      <%= "尚未有 logo 圖片"%>
    </div>  
  <% end %>
  <%=f.file_field :logo%>
  
  <% if @notification.logo.exists? %>
    <%= check_box_tag "destroy_logo", "1" %> 刪除檔案
  <% end %>
</div>

<%= f.submit "更新",:class => "btn btn-primary" %>


<script>
  $("#no_countdown").click(function() {
    if($("#no_countdown").prop("checked")) {
      $("#count_time_form").css("display","none");
    } else{
      $("#count_time_form").css("display","block");
    }
    
  });

</script>