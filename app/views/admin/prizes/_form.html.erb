<div class="col-md-10">

  <div class="form-group">
    <%= f.label :name ,"獎品名稱"%>
    <%= f.text_field :name, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%=f.label :logo, "LOGO"%>
    <%=f.file_field :logo%>

    <% if @prize.logo.exists? %>
      <%= image_tag(@prize.logo.url(:thumb))%>
      <%= check_box_tag "destroy_logo", "1" %> 刪除檔案
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :content ,"內容"%>
    <%= f.text_area :content, :class =>"froala-editor" %>
  </div>

  <div class="form-group">
    <%= f.label :brand ,"品牌"%>
    <%= f.text_field :brand, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :vendor ,"經銷商或贊助商"%>
    <%= f.text_field :vendor, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price ,"價格(NTD)"%>
    <%= f.number_field :price, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :quatity ,"數量"%>
    <%= f.number_field :quatity, :class => "form-control" %>
  </div>

  <%= f.submit "更新",:class => "btn btn-primary" %>

</div>

<script>
  $(function() {
    $('.froala-editor').froalaEditor({
      imageUploadURL: '/attachment/upload.json',
      imageUploadMethod: 'POST'
    });

  });
</script>