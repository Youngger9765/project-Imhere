<div class="col-md-4">
  <div class="form-group">
    <%=f.label :logo, "LOGO"%>
    <%=f.file_field :logo%>

    <% if @lottery.logo.exists? %>
      <%= image_tag(@lottery.logo.url(:thumb))%>
      <%= check_box_tag "destroy_logo", "1" %> 刪除檔案
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :name ,"抽獎名稱"%>
    <%= f.text_field :name, :class => "form-control" %>
  </div>

  <h3>活動上架狀態</h3> 
  <div>
    <input type="radio" id="radio1" name="lottery[status]" class="switch" value="0" 
      <%if @lottery.status == 0 %>
        checked="checked" 
      <%else%>
      <%end%>
    />
    <label for="radio1">隱藏</label>
  </div>
  <br>
  <div>
    <input type="radio" id="radio2" name="lottery[status]" class="switch" value="1" 
      <%if @lottery.status == 1 %>
        checked="checked" 
      <%else%>
      <%end%>
    />
    <label for="radio2">公開上架</label>
  </div>
  <br>

  <div class="form-group">
    <%= f.label :content ,"抽獎內容"%>
    <%= f.text_area :content, :class =>"froala-editor" %>
  </div>

  <div class="form-group">
    <%= f.label :start_time ,"開始時間"%>
    <%= f.datetime_select :start_time%>
  </div>

  <div class="form-group">
    <%= f.label :end_time ,"結束時間"%>
    <%= f.datetime_select :end_time%>
  </div>

  <%= f.submit "更新",:class => "btn btn-primary" %>

</div>

<script>
  $(function() {
    $('.froala-editor').froalaEditor({
      imageUploadURL: '/attachment/upload.json',
      imageUploadMethod: 'POST'
    });

  });
</script>