<h3>
<%=link_to "抽獎列表", admin_lotteries_path%>
>
<%= @lottery.activity.name%>-<%= @lottery.name %> 
</h3>

<h4>抽獎名單</h4>

<% if @lottery.got_winner == 1 %>
  <%= link_to "中獎名單", winners_list_admin_lottery_path(@lottery),:class => "btn btn-info pull-right"%>
<% elsif @lottery.got_winner == 0 %>
  <%= link_to "手動抽獎", users_list_admin_lottery_path(@lottery, :filter => 'get_winner'),:class => "btn btn-success pull-right", :data => {:confirm => "手動抽獎？" }%>
<%end%>



<table class="table">
  <tr>
    <td>抽獎人登記姓名</td>
    <td>抽獎人ID </td>
    <td>抽獎人登記電話</td>
    <td>抽獎人登記住址</td>
    <td>抽獎人登記生日</td>
  </tr>
  <%@users.each do |user|%>
    <tr>
      <td><%= UserLotteryShip.find_by(:user_id => user.id).user_name%></td>
      <td><%= user.id%></td>
      <td><%= UserLotteryShip.find_by(:user_id => user.id).user_phone_number%></td>
      <td><%= UserLotteryShip.find_by(:user_id => user.id).user_address%></td>
      <td><%= UserLotteryShip.find_by(:user_id => user.id).user_birthday%></td>
    </tr>
  <%end%>
</table>